<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>
    <style name="Background" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/mainbackground</item>
    </style>
    <style name="BackgroundWhite" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/mainbackground_white</item>
    </style>
    <style name="BackgroundYellow" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_yellow</item>
    </style>
    <style name="Autocomplete">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>
    
    <style name="DatePicker" parent="android:Theme.Material.Dialog.Alert">
        <item name="android:colorControlActivated">@color/maroon</item>
        <item name="android:colorAccent">@color/toolbar</item>
        <item name="colorPrimary">@color/black</item>
        <!--<item name="android:colorBackground">@color/maroon</item>-->
    </style>
    <style name="Theme.MyTheme" parent="Theme.AppCompat.Light">
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/toolbar</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/darkMaroon</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

    </style>


</resources>
